<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nes_original_v2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ControlActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnForward"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/design"
                android:text="F" />

            <Button
                android:id="@+id/btnBackward"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/design"
                android:text="B" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textview_frontDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/textview_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textview_leftDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LD"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/textview_rightDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RD"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="right"
                android:layout_marginLeft="130dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textview_backDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BD"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="55dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPark"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/design"
            android:text="PARK" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/design"
            android:text="STOP" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/design"
                android:text="L" />

            <Button
                android:id="@+id/btnRight"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/design"
                android:text="R" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>